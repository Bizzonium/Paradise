<!-- pAI atmosphere sensor
code/modules/mob/living/silicon/pai/software_modules.dm
-->

{{if data.reading}}
	<div class="item">
		<div class="itemLabel">
			Давление:
		</div>
		<div class="itemContent">
			{{:helper.smoothRound(data.pressure, 1)}} кПа
		</div>
	</div>

	<div class="item">
		<div class="itemLabel">
			Температура:
		</div>
		<div class="itemContent">
			{{:helper.smoothRound(data.temperature)}}K ({{:helper.smoothRound(data.temperatureC)}}&deg;C)
		</div>
	</div>

	{{for data.gas}}
		<div class="item">
			<div class="itemLabel">
				{{:value.name}}:
			</div>
			<div class="itemContent">
				{{:helper.smoothRound(value.percent)}}%
			</div>
		</div>
	{{/for}}
{{else}}
	<span class="bad">Не удаётся получить показания по воздуху!</span>
{{/if}}
