<!--
Title: Medical Records UI
Used In File(s): \code\game\machinery\computer\medical.dm
-->

<!--
#define MED_DATA_MAIN	1	// Main menu
#define MED_DATA_R_LIST	2	// Record list
#define MED_DATA_MAINT	3	// Records maintenance
#define MED_DATA_RECORD	4	// Record
#define MED_DATA_V_DATA	5	// Virus database
#define MED_DATA_MEDBOT	6	// Medbot monitor
-->

<div class="item">
	<div class="itemLabelNarrow">
		<b>Подтвердите личность:</b>
	</div>
	<div class="itemContent">
		{{:helper.link(data.scan ? data.scan : "----------", 'eject', {'scan' : 1}, null, data.scan ? 'itemContentWide' : 'fixedLeft')}}
	</div>
</div>
<hr>
{{if data.authenticated}}
	{{if data.screen == 1}} <!-- MED_DATA_MAIN -->
		<h3>Меню</h3>
		<div class="item">
			<div class="line">{{:helper.link('Искать записи', 'search', {'search' : 1})}}</div>
			<div class="line">{{:helper.link('Список записей', 'list', {'screen' : 2})}}</div>
			<div class="line">{{:helper.link('База данных вирусов', 'database', {'screen' : 5})}}</div>
			<div class="line">{{:helper.link('Медбот слежение', 'plus-square', {'screen' : 6})}}</div>
			<div class="line">{{:helper.link('Обслуживание записей', 'wrench', {'screen' : 3})}}</div>
			<div class="line">{{:helper.link('Выход', 'lock', {'logout' : 1})}}</div>
		</div>
	{{else data.screen == 2}} <!-- MED_DATA_R_LIST -->
		<h3><center>Список записей</center></h3>
		{{for data.records}}
			<div class="line">{{:helper.link(value.id + ': ' + value.name, 'user', {'d_rec' : value.ref})}}</div>
		{{/for}}
		<br><hr>
		<div class="line">{{:helper.link('Back', 'arrow-left', {'screen' : 1})}}</div>
	{{else data.screen == 3}} <!-- MED_DATA_MAINT -->
		<h3>Обслуживание записей</h3>
		<div class="line">{{:helper.link('Резервное копирование на диск', 'download', {'back' : 1}, 'disabled')}}</div>
		<div class="line">{{:helper.link('Загрузить с диска', 'upload', {'u_load' : 1}, 'disabled')}}</div>
		<div class="line">{{:helper.link('Удалить все записи', 'trash', {'del_all' : 1})}}</div>
		<div class="line">{{:helper.link('Назад', 'arrow-left', {'screen' : 1})}}</div>
	{{else data.screen == 4}} <!-- MED_DATA_RECORD -->
		<h3><center>Медицинские записи</center></h3>
		<h4><center>Основные данные</center></h4>
		{{if data.general.empty}}
			<span class="bad"><center>Основные записи потеряны!</center></span>
		{{else}}
			<div class="statusDisplayRecords">
				<table style='width:100%'><tr>
					<td valign='top' style='margin-right: 300px;'>
						{{for data.general.fields}}
							<div class="item">
								<div class="itemLabel">{{:value.field}}</div>
								<div class="itemContent">{{:helper.link(value.value, value.edit ? 'pencil' : 'user-times', {'field' : value.edit}, value.edit ? null : 'disabled')}}</div>
							</div>
						{{/for}}
					</td>
					<td valign='middle' align='center' style='width: 300px;'>
						{{if data.general.has_photos}}
							{{for data.general.photos}}
								{{if value.photo}}
									<img src={{:value.photo}} height=96 width=96 border=5>
								{{/if}}
							{{/for}}
						{{/if}}
					</td>
				</tr></table>
			</div>
		{{/if}}

		<h4><center>Медицинские данные</center></h4>
		{{if data.medical.empty}}
			<span class="bad"><center>Медицинские записи потеряны!</center></span>
			<div style="text-align: center;">
				<div style="display: inline-block;">{{:helper.link('Новая запись', 'plus', {'new' : 1})}}</div>
			</div>
			<h3><center>Меню</center></h3>
		{{else}}
			{{for data.medical.fields}}
				<div class="item">
					<div class="itemLabel">{{:value.field}}</div>
					<div class="itemContent">{{:helper.link(value.value, 'pencil', {'field' : value.edit})}}</div>
				</div>
				{{if value.line_break}}
					<br>
				{{/if}}
			{{/for}}

			<h4><center>Комментарии/Логи</center></h4>
			{{for data.medical.comments}}
				<div class="line">{{:value}}</div>
				<div class="line">{{:helper.link('Убрать элемент', 'trash', {'del_c' : index})}}</div>
				<br><hr>
			{{/for}}

			<div style="text-align: center;">
				<div style="display: inline-block;">{{:helper.link('Добавить элемент', 'plus', {'add_c' : 1})}}</div>
			</div>

			<h3><center>Меню</center></h3>
			<div class="line">{{:helper.link('Удалить запись (только медицинские)', 'trash', {'del_r' : 1})}}</div>
		{{/if}}

		<div class="line">{{:helper.link('Печать записи', 'print', {'print_p' : 1})}}</div>
		<div class="line">{{:helper.link('Назад', 'arrow-left', {'screen' : 2})}}</div>
	{{else data.screen == 5}} <!-- MED_DATA_V_DATA -->
		<h3><center>База данных вирусов</center></h3>
		{{for data.virus}}
			<div class="line">{{:helper.link(value.name, 'arrow-right', {'vir' : value.D})}}</div>
		{{/for}}
		<br><hr>
		{{:helper.link('Back', 'arrow-left', {'screen' : 1})}}
	{{else data.screen == 6}} <!-- MED_DATA_MEDBOT -->
		<h3><center>Наблюдение медицинского робота</center></h3>
		{{for data.medbots}}
			<h4>{{:value.name}}</h4>
			<div class="item">
				<div class="itemLabel">Локация:</div>
				<div class="itemContent">{{:value.x}}, {{:value.y}}</div>
			</div>
			<div class="item">
				<div class="itemLabel">Статус:</div>
				<div class="itemContent">
					{{:value.on ? "<span class='good'>Онлайн</span>" : "<span class='average'>Оффлайн</span>"}}. {{if value.use_beaker}}Резервуар: [{{:value.total_volume}}/{{:value.maximum_volume}}]{{else}}Используя встроенный синтезатор.{{/if}}
				</div>
			</div>
			<hr>
		{{empty}}
			<h4 class="bad"><center>Не обнаружено!</center></h4>
		{{/for}}
		<div class="line">{{:helper.link('Назад', 'arrow-left', {'screen' : 1})}}</div>
	{{/if}}
{{else}}
	<h3>Menu</h3>
	{{:helper.link('Войти', 'unlock', {'login' : 1})}}
{{/if}}

{{if data.temp}}
	<div class="mask" style="display: table;">
		<div class="maskContent" style="margin: 0px; vertical-align: middle; align:center; display: table-cell;">
			{{if data.temp.notice}}
				<div class="notice"><center>{{:data.temp.text}}</center></div>
			{{else}}
				<center>{{:data.temp.text}}</center>
			{{/if}}


			{{if data.temp.has_buttons}}
				<div class="line">
					<div style="display: inline-block;">
						<div style="width: 500px; display: flex; display: -webkit-flex; flex-wrap: wrap; -webkit-flex-wrap: wrap; justify-content: center; -webkit-justify-content: center;">
							{{for data.temp.buttons}}
								{{:helper.link(value.name, value.icon, {'temp' : 1, 'temp_action' : value.href}, value.status)}}
							{{/for}}
						</div>
					</div>
				</div>
			{{/if}}

			<div style="display: inline-block;">
				<div class="item">{{:helper.link('Очистить экран', 'home', {'temp' : 1})}}</div>
			</div>
		</div>
	</div>
{{/if}}
