{{if data.change_race}}
    <div class="item">
        <div class="itemLabelNarrow">
            Расы:
        </div>
        <div class="itemContentWide">
            {{for data.species}}
                {{:helper.link(value.specimen, null, { 'race' : value.specimen}, null, data.specimen == value.specimen ? 'selected' : null)}}
            {{/for}}
        </div>
    </div>
{{/if}}

{{if data.change_gender}}
    <div class="item">
        <div class="itemLabelNarrow">
            Гендер:
        </div>
        <div class="itemContentWide">
            {{:helper.link('Мужской', null, { 'gender' : 'male'}, null, data.gender == 'male' ? 'selected' : null)}}
            {{:helper.link('Женский', null, { 'gender' : 'female'}, null, data.gender == 'female' ? 'selected' : null)}}
						{{if !data.has_gender}}
							{{:helper.link('Гендерквир', null, { 'gender' : 'plural'}, null, data.gender == 'plural' ? 'selected' : null)}}
						{{/if}}
        </div>
    </div>
{{/if}}

{{if data.change_eye_color || data.change_skin_tone || data.change_skin_color || data.change_head_accessory_color || data.change_hair_color || data.change_facial_hair_color || data.change_head_marking_color || data.change_body_marking_color || data.change_tail_marking_color}}
    <div class="item">
        <div class="itemLabelNarrow">
            Цвета:
        </div>
        <div class="itemContentWide">
            {{if data.change_eye_color}}
                {{:helper.link('Изменить цвет глаз', null, { 'eye_color' : 1})}}
            {{/if}}
            {{if data.change_skin_tone}}
                {{:helper.link('Изменить тон кожи', null, { 'skin_tone' : 1})}}
            {{/if}}
            {{if data.change_skin_color}}
                {{:helper.link('Изменить цвет кожи', null, { 'skin_color' : 1})}}
            {{/if}}
            {{if data.change_head_accessory_color}}
                {{:helper.link('Изменить цвет головного аксессуара', null, { 'head_accessory_color' : 1})}}
            {{/if}}
            {{if data.change_hair_color}}
                {{:helper.link('Изменить цвет волос', null, { 'hair_color' : 1})}}
            {{/if}}
            {{if data.change_secondary_hair_color}}
                {{:helper.link('Изменить второстепенный цвет волос', null, { 'secondary_hair_color' : 1})}}
            {{/if}}
            {{if data.change_facial_hair_color}}
                {{:helper.link('Изменить цвет волос на лице', null, { 'facial_hair_color' : 1})}}
            {{/if}}
            {{if data.change_secondary_facial_hair_color}}
                {{:helper.link('Изменить второстепенный цвет волос на лице', null, { 'secondary_facial_hair_color' : 1})}}
            {{/if}}
            {{if data.change_head_marking_color}}
                {{:helper.link('Изменить цвет отметин на голове', null, { 'head_marking_color' : 1})}}
            {{/if}}
            {{if data.change_body_marking_color}}
                {{:helper.link('Изменить цвет отметин на туловище', null, { 'body_marking_color' : 1})}}
            {{/if}}
            {{if data.change_tail_marking_color}}
                {{:helper.link('Изменить цвет отметин на хвостн', null, { 'tail_marking_color' : 1})}}
            {{/if}}
        </div>
    </div>
{{/if}}

