<div class="item">
	<div class="itemLabel">
		Питание
	</div>
	<div class="itemContent">
		{{:helper.link('Вкл', null, {'power' : 1}, data.power ? 'selected' : null)}}
		{{:helper.link('Выкл', null, {'power' : 1}, data.power ? null : 'selected')}}
	</div>
</div>

<div class="item">
	<div class="itemLabel">
		Частота: {{:data.freq}}
	</div>
	<div class="itemContent">
		{{:helper.link('--', null, {'freq' : -10})}}
		{{:helper.link('-', null, {'freq' : -2})}}
		{{:helper.link('+', null, {'freq' : 2})}}
		{{:helper.link('++', null, {'freq' : 10})}}
	</div>
</div>

<div class="item">
	<div class="itemLabel">
		Код: {{:data.code}}
	</div>
	<div class="itemContent">
		{{:helper.link('--', null, {'code' : -5})}}
		{{:helper.link('-', null, {'code' : -1})}}
		{{:helper.link('+', null, {'code' : 1})}}
		{{:helper.link('++', null, {'code' : 5})}}
	</div>
</div>
