{{:helper.syndicateMode()}}
<div class='item'>
	<div class='itemLabel'>
		Состояние полезной нагрузки:
	</div>
	<div class='itemContent'>
		{{if data.armed}}
			ВЗВЕДЕНО
		{{else}}
			НА ПРЕДОХРАНИТЕЛЕ
		{{/if}}
	</div>
	<div class='itemLabel'>
		Управление:
	</div>
	<div class='itemContent'>
		<table>
		<tr><td>{{:helper.link('ОБФУСЦИРОВАТЬ НАЗВАНИЕ ПРОГРАММЫ', 'eye-slash', {'action' : 'PRG_obfuscate'})}}
		<tr><td>{{:helper.link(data.armed ? 'НА ПРЕДОХРАНИТЕЛЬ' : 'ВЗВЕСТИ', data.armed ? 'crosshairs' : 'info', {'action' : 'PRG_arm'})}}
		{{:helper.link('АКТИВИРОВАТЬ', 'exclamation-triangle', {'action' : 'PRG_activate'}, data.armed ? null : 'disabled', data.armed ? 'redButton' : null)}}
		</table>
	</div>
</div>
