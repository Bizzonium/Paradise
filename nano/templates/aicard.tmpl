
<!--
Title: inteliCard interface
Used In File(s): \code\game\objects\items\devices\aicard.dm
 -->

 <style type="text/css">
    table.borders   {
        width:95%;
        margin-left:2.4%;
        margin-right:2.4%;
    }

    table.borders, table.borders tr {
        border: 1px solid White;
    }

    td.law_index {
        width: 50px;
    }

    td.state {
        width: 63px;
		text-align:center;
    }

    td.add {
        width: 36px;
    }

    td.edit {
        width: 36px;
		text-align:center;
    }

    td.delete {
        width: 53px;
		text-align:center;
    }

    td.law_type {
        width: 65px;
    }

    td.position {
        width: 37px;
    }
</style>

{{if data.has_ai}}
    <div class="item">
        <div class="itemLabel">
            Целостность железа:
        </div>
        <div class="itemContent">
            {{:data.hardware_integrity}}%
        </div>
    </div>

    {{if data.has_laws}}
		<table class='borders'>
		<tr><td class='law_index'>Индекс</td><td>Law</td></tr>

		<div class="itemLabelNarrow">
			Законы:
		</div>
		{{for data.laws}}
			<tr><td valign="top">{{:value.index}}.</td><td>{{:value.law}}</td></tr>
		{{/for}}
		</table>
    {{else}}
        <span class='notice'>Законы не найдены.</span>
	{{/if}}

    {{if data.operational}}
        <table>
            <tr>
                <td><span class='itemLabelWidest'>Радио подпространственный трансивер</span></td>
                <td>{{:helper.link("Включить", null, {'radio' : 0}, data.radio ? 'selected' : null)}}</td>
                <td>{{:helper.link("Отключить", null, {'radio' : 1}, data.radio ? null : 'redButton' )}}</td>
            </tr>
            <tr><td><span class='itemLabelWidest'>Беспроводной интерфейс</span></td>
                <td>{{:helper.link("Включить", null, {'wireless' : 0}, data.wireless ? 'selected' : null)}}</td>
                <td>{{:helper.link("Отключить", null, {'wireless' : 1}, data.wireless ? null : 'redButton' )}}</td>
            </tr>
            {{if data.flushing}}
                <tr><td><span class='notice'>Выполняется стирание ИИ...</span></td></tr>
            {{else}}
                <tr>
                    <td><span class='itemLabelWidest'>Стереть ИИ</span></td>
                    <td>{{:helper.link("Wipe", 'exclamation-circle', {'wipe' : 1}, null, 'redButton')}}</td>
                </tr>
            {{/if}}
        </table>
    {{/if}}
{{else}}
    Stored AI: <span class='notice'>ИИ не обнаружен.</span>
{{/if}}
