<!--
Title: Air Alarm UI
Used In File(s): /code/game/machinery/alarm.dm
-->
<!--
#define AALARM_MODE_SCRUBBING	1
#define AALARM_MODE_REPLACEMENT	2 //like scrubbing, but faster.
#define AALARM_MODE_PANIC		3 //constantly sucks all air
#define AALARM_MODE_CYCLE		4 //sucks off all air, then refill and switches to scrubbing
#define AALARM_MODE_FILL		5 //emergency fill
#define AALARM_MODE_OFF			6 //Shuts it all down.

#define AALARM_SCREEN_MAIN		1
#define AALARM_SCREEN_VENT		2
#define AALARM_SCREEN_SCRUB		3
#define AALARM_SCREEN_MODE		4
#define AALARM_SCREEN_SENSORS	5
-->
<h3>{{:data.name}}</h3>
{{if !data.air}}
	<div class="notice">Не удаётся взять образец воздуха.</div>
{{else}}
	<div class="statusDisplay">
		<div class="line">
			<div class="statusLabel">Давление:</div>
			{{:helper.string("<div class='statusValue {0}'>{1} кПа</div>",helper.dangerToClass(data.air.danger.pressure),helper.smoothRound(data.air.pressure,4))}}
			<div class="statusValue" style="margin-left:5px;">
			{{if !data.locked}}
				{{if data.mode == 3}}
					{{:helper.link("ДЕАКТИВИРОВАТЬ ЭКСТРЕННУЮ ОТКАЧКУ",null,{"mode" : 1},null,'linkOn')}}
				{{else}}
					{{:helper.link("АКТИВИРОВАТЬ ЭКСТРЕННУЮ ОТКАЧКУ",null,{"mode" : 3},null,'red')}}
				{{/if}}
			{{/if}}
			</div>
		</div>
		<div class="line">
			<div class="statusLabel">Кислород:</div>
			{{:helper.displayBar(data.air.contents.oxygen, 0, 100, helper.dangerToClass(data.air.danger.oxygen))}}
			{{:helper.string("<div class='statusValue {0}'>{1}%</div>",helper.dangerToClass(data.air.danger.oxygen),helper.smoothRound(data.air.contents.oxygen))}}
		</div>
		<div class="line">
			<div class="statusLabel">Азот:</div>
			{{:helper.displayBar(data.air.contents.nitrogen, 0, 100, helper.dangerToClass(data.air.danger.nitrogen))}}
			{{:helper.string("<div class='statusValue {0}'>{1}%</div>",helper.dangerToClass(data.air.danger.nitrogen),helper.smoothRound(data.air.contents.nitrogen,0))}}
		</div>
		<div class="line">
			<div class="statusLabel">Углекислый газ:</div>
			{{:helper.displayBar(data.air.contents.co2, 0, 100, helper.dangerToClass(data.air.danger.co2))}}
			{{:helper.string("<div class='statusValue {0}'>{1}%</div>",helper.dangerToClass(data.air.danger.co2),helper.smoothRound(data.air.contents.co2,0))}}
		</div>
		<div class="line">
			<div class="statusLabel">Токсины:</div>
			{{:helper.displayBar(data.air.contents.plasma, 0, 100, helper.dangerToClass(data.air.danger.plasma))}}
			{{:helper.string("<div class='statusValue {0}'>{1}%</div>",helper.dangerToClass(data.air.danger.plasma),helper.smoothRound(data.air.contents.plasma,0))}}
		</div>
		{{if data.air.danger.other>0}}
		<div class="line">
			<div class="statusLabel">Другие:</div>
			{{:helper.displayBar(data.air.contents.other, 0, 100, helper.dangerToClass(data.air.danger.other))}}
			{{:helper.string("<div class='statusValue {0}'>{1}%</div>",helper.dangerToClass(data.air.danger.other),helper.smoothRound(data.air.contents.other,0))}}
		</div>
		{{/if}}
		<div class="line">
			<div class="statusLabel">
				Температура:
			</div>
			{{:helper.string("<div class='statusValue {0}'>{1}&deg;K ({2}&deg;C)</div>",helper.dangerToClass(data.air.danger.temperature),helper.smoothRound(data.air.temperature,2),helper.smoothRound(data.air.temperature_c,2))}}
		</div>
		<div class="line">
			<div class="statusLabel">Локальный статус:</div>
			{{if data.air.danger.overall == 0}}
				{{if data.atmos_alarm}}
					<div class="average">Осторожно: в зоне атмосферная тревога</div>
				{{else}}
					<div class="good">Оптимальный</div>
				{{/if}}
			{{else data.air.danger.overall == 1}}
				<div class="average">Осторожно</div>
			{{else}}
				<div class="notice">ОПАСНОСТЬ: СИЗ органов дыхания обязательны</div>
			{{/if}}
			{{if !data.locked}}
				{{if data.alarmActivated}}
					{{:helper.link('Сбросить тревогу',null,{'atmos_reset':1},null,'linkOn')}}
				{{else}}
					{{:helper.link('Активировать тревогу',null,{'atmos_alarm':1},null)}}
				{{/if}}
			{{/if}}
		</div>
		<div class="line">
			<!--
			#define RCON_NO		1
			#define RCON_AUTO	2
			#define RCON_YES	3
			-->
			<div class="statusLabel">Удалённое управление:</div>
			{{:helper.link('Выкл',  null, {'rcon' : 1}, data.remote_connection && !data.remote_access ? (data.rcon == 1 ? '' : 'disabled') : null, data.rcon == 1 ? 'selected' : null)}}
			{{:helper.link('Авто', null, {'rcon' : 2}, data.remote_connection && !data.remote_access ? (data.rcon == 2 ? '' : 'disabled') : null, data.rcon == 2 ? 'selected' : null)}}
			{{:helper.link('Вкл',   null, {'rcon' : 3}, data.remote_connection && !data.remote_access ? (data.rcon == 3 ? '' : 'disabled') : null, data.rcon == 3 ? 'selected' : null)}}
		</div>
		<div class="line">
			<div class="statusLabel">Термостат:</div>
			{{:helper.link(data.target_temp+" C", 'thermometer', {'temperature': 1})}}
		</div>
	</div>
{{/if}}

{{if data.locked}}
	<div class="notice">Проведите картой для разблокировки.</div>
{{else}}
	<div class="notice">Не забудьте заблокировать панель с помощью ID карты после использования.</div>
	<div class="item">
		<div class="itemLabelNarrow">Экран:</div>
		<div class="itemContents">
			{{:helper.link('Главная',      'gear',{'screen':1},(data.screen==1)?'linkOn':'')}}
			{{:helper.link('Вентиляция',     'gear',{'screen':2},(data.screen==2)?'linkOn':'')}}
			{{:helper.link('Скрубберы', 'gear',{'screen':3},(data.screen==3)?'linkOn':'')}}
			{{:helper.link('Режимы',      'gear',{'screen':4},(data.screen==4)?'linkOn':'')}}
			{{:helper.link('Пороги','gear',{'screen':5},(data.screen==5)?'linkOn':'')}}
		</div>
	</div>
	<!-- VENTS -->
	{{if data.screen == 2}}
		<h3>Настройка вентиляционных насосов</h3>
		{{for data.vents}}
			<div class="statusDisplay">
				<div class="line">
					<b>{{>value.name}}:</b>
				</div>
				<div class="line">
					<div class="statusLabel">Установка:</div>
					<div class="statusValue">
						{{:helper.link(value.power ? 'Вкл':'Выкл','power-off',{'id_tag':value.id_tag,'command':'power','val':value.power?0:1},null)}}
						{{if value.direction=="siphon"}}
							{{:helper.link('Откачивание','arrow-circle-down',{'id_tag':value.id_tag,'command':'direction','val':'1'})}}
						{{else}}
							{{:helper.link('Выдувание','arrow-up',{'id_tag':value.id_tag,'command':'direction','val':'0'})}}
						{{/if}}
					</div>
				</div>
				<div class="line">
					<div class="statusLabel">Проверка давления:</div>
					<div class="statusValue">
						{{:helper.link('Внешняя', 'power-off',{'id_tag':value.id_tag,'command':'checks','val':1},null,(value.checks == 1 ?'linkOn':''))}}
						{{:helper.link('Внутренняя', 'power-off',{'id_tag':value.id_tag,'command':'checks','val':2},null,(value.checks == 2 ?'linkOn':''))}}
					</div>
				</div>
				<div class="line">
					<div class="statusLabel">Граница внешнего давления:</div>
					<div class="statusValue">
						{{:helper.smoothRound(value.external,4)}} кПа
					</div>
					{{:helper.link('Указать','gear',{'id_tag':value.id_tag,'command':'set_external_pressure'})}}
					{{:helper.link('Сбросить','refresh',{'id_tag':value.id_tag,'command':'set_external_pressure','val':101.325},null,'linkOn')}}
				</div>
			</div>
		{{empty}}
			<i>Вентиляционные насосы отсутствуют в данной зоне.</i>
		{{/for}}
	<!-- SCRUBBERS -->
	{{else data.screen == 3}}
		<h3>Скрубберы</h3>
		{{for data.scrubbers}}
			<div class="statusDisplay">
				<div class="line">
					<b>{{>value.name}}:</b>
				</div>
				<div class="line">
					<div class="statusLabel">Установка:</div>
					<div class="statusValue">
						{{:helper.link(value.power ? 'Вкл':'Выкл','power-off',{'id_tag':value.id_tag,'command':'power','val':value.power?0:1},null)}}
					</div>
				</div>
				<div class="line">
					<div class="statusLabel">Тип:</div>
					<div class="statusValue">
						{{if value.scrubbing==0}}
							{{:helper.link('Всасывание','arrow-circle-down',{'id_tag':value.id_tag,'command':'scrubbing','val':1},null,'red')}}
						{{else}}
							{{:helper.link('Скруббинг','exchange',{'id_tag':value.id_tag,'command':'scrubbing','val':0},null,'linkOn')}}
						{{/if}}
					</div>
				</div>
				<div class="line">
					<div class="statusLabel">Радиус действия:</div>
					<div class="statusValue">
						{{:helper.link(value.widenet ? 'Расширенный' : 'Нормальный', null, { 'id_tag' : value.id_tag, 'command' : 'widenet', 'val' : value.widenet ? 0 : 1}, null, value.widenet ? 'selected' : null)}}
					</div>
				</div>
				{{if value.scrubbing==1}}
				<div class="line">
					<div class="statusLabel">Фильтрация:</div>
					<div class="statusValue">
						{{:helper.link('CO<sub>2</sub>',null,{'id_tag':value.id_tag,'command':'co2_scrub','val':(value.filter_co2==0?1:0)},null,(value.filter_co2?'linkOn':''))}}
						{{:helper.link('Плазма',        null,{'id_tag':value.id_tag,'command':'tox_scrub','val':(value.filter_toxins==0?1:0)},null,(value.filter_toxins?'linkOn':''))}}
						{{:helper.link('N<sub>2</sub>O',null,{'id_tag':value.id_tag,'command':'n2o_scrub','val':(value.filter_n2o==0?1:0)},null,(value.filter_n2o?'linkOn':''))}}
						{{:helper.link('O<sub>2</sub>', null,{'id_tag':value.id_tag,'command':'o2_scrub', 'val':(value.filter_o2 ==0?1:0)},null,(value.filter_o2 ?'linkOn':''))}}
						{{:helper.link('N<sub>2</sub>', null,{'id_tag':value.id_tag,'command':'n2_scrub', 'val':(value.filter_n2 ==0?1:0)},null,(value.filter_n2 ?'linkOn':''))}}
					</div>
				</div>
				{{/if}}
			</div>
		{{empty}}
			<i>Скрубберы отсутствуют в данной зоне.</i>
		{{/for}}
	<!-- MODES -->
	{{else data.screen == 4}}
		<h3>Системные режимы</h3>
		<div class="statusDisplay">
			{{for data.modes}}
			{{if !value.emagonly || value.emagonly && data.emagged}}
				<div class="line">
					<div class="statusLabel">{{:helper.link(value.name,'gear',{'mode':index+1},null,(index+1==data.mode?'linkOn':value.emagonly ? 'redButton' : ''))}}</div>
					<div class="statusValue">
						{{:value.desc}}
					</div>
				</div>
			{{/if}}
			{{/for}}
		</div>
		<h3>Системные пресеты</h3>
		<div class="notice">После выбора система автоматически начнёт цикл удаления загрязнений.</div>
		<div class="statusDisplay">
			{{for data.presets}}
			<div class="line">
				<div class="statusLabel">{{:helper.link(value.name,'gear',{'preset':index+1},null,(index+1==data.preset?'linkOn':''))}}</div>
				<div class="statusValue">
					{{:value.desc}}
				</div>
			</div>
			{{/for}}
		</div>
	<!-- SENSORS -->
	{{else data.screen == 5}}
		<h3>Пороги тревоги</h3>
		Частичное давление для газов.
		<table class='fixed'>
			<tr>
				<td></td><td><span class='bad'>мин2</span></td><td><span class='average'>мин1</span></td><td><span class='average'>макс1</span></td><td><span class='bad'>макс2</span></td>
			</tr>
			{{for data.thresholds}}
				<tr>
					<td>{{:value.name}}</td>
					{{for value.settings :selectedItem:SelectedNull}}
						<td>
							{{:helper.link(selectedItem.selected >= 0 ? helper.round(selectedItem.selected*100)/100 : "Выкл", null, { 'command' : 'set_threshold', 'env' : selectedItem.env, 'var' : selectedItem.val })}}
						</td>
					{{/for}}
				</tr>
			{{/for}}
		<table>
	{{/if}}
{{/if}}
