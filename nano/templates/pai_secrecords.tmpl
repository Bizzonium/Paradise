<!-- pAI security records
code/modules/mob/living/silicon/pai/software_modules.dm
-->

{{if data.records}}
	{{for data.records}}
		<div class="item">
			{{:helper.link(value.name, '', {"stopic":"sec_records", "select":value.ref})}}
		</div>
	{{/for}}
{{/if}}
<hr/>
{{if data.general}}
	<div class="item">
		<div class="itemLabel">Имя</div>
		<div class="itemContent">{{:data.general.name}}</div>
	</div>
	<div class="item">
		<div class="itemLabel">ID записи</div>
		<div class="itemContent">{{:data.general.id}}</div>
	</div>
	<div class="item">
		<div class="itemLabel">Пол</div>
		<div class="itemContent">{{:data.general.sex}}</div>
	</div>
	<div class="item">
		<div class="itemLabel">Раса</div>
		<div class="itemContent">{{:data.general.species}}</div>
	</div>
	<div class="item">
		<div class="itemLabel">Возраст</div>
		<div class="itemContent">{{:data.general.age}}</div>
	</div>
	<div class="item">
		<div class="itemLabel">Ранг</div>
		<div class="itemContent">{{:data.general.rank}}</div>
	</div>
	<div class="item">
		<div class="itemLabel">Отпечаток</div>
		<div class="itemContent">{{:data.general.fingerprint}}</div>
	</div>
	<div class="item">
		<div class="itemLabel">Физический статус</div>
		<div class="itemContent">{{:data.general.p_stat}}</div>
	</div>
	<div class="item">
		<div class="itemLabel">Ментальный статус</div>
		<div class="itemContent">{{:data.general.m_stat}}</div>
	</div>
{{/if}}
{{if data.security}}
	<div class="item">
		<div class="itemLabel">Преступный статус</div>
		<div class="itemContent">{{:data.security.criminal}}</div>
	</div>
	<div class="item">
		<div class="itemLabel">Незначительные преступления</div>
		<div class="itemContent">{{:data.security.mi_crim}}</div>
		<div class="itemContent">{{:data.security.mi_crim_d}}</div>
	</div>
	<div class="item">
		<div class="itemLabel">Серъёзные преступления</div>
		<div class="itemContent">{{:data.security.ma_crim}}</div>
		<div class="itemContent">{{:data.security.ma_crim_d}}</div>
	</div>
	<div class="item">
		<div class="itemLabel">Важные замечания</div>
		<div class="itemContent">{{:data.security.notes}}</div>
	</div>
{{/if}}

{{if data.could_not_find}}
	<div class="item">
		Попытка найти записи провалилась; информация выше может быть неполной или отсутствовать.
	</div>
{{/if}}
