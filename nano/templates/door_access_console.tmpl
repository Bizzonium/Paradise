<div class="item" style="padding-top: 10px">
	<div class="item">
		<div class="itemLabel" style="width: 150px">
			Статус внешнего шлюза:
		</div>
		<div class="statusValue">
		{{if data.exterior_status.state == "closed"}}
			Закрыт
		{{else}}
			Открыт
		{{/if}}
		</div>
	</div>
	<div class="item">
		<div class="itemLabel" style="width: 150px">
			Стутс внутреннего шлюза:
		</div>
		<div class="statusValue">
		{{if data.interior_status.state == "closed"}}
			Закрыт
		{{else}}
			Открыт
		{{/if}}
		</div>
	</div>
</div>
<div class="item" style="padding-top: 10px">
	<div class="item">
		<div class="itemContent" style="width: 100%">
		{{if data.exterior_status.state == "open"}}
			{{:helper.link('Заблокировать внешний шлюз', 'exclamation-triangle', {'command' : 'force_ext'}, data.processing ? 'disabled' : null)}}
		{{else}}
			{{:helper.link('Цикл выхода', 'arrow-circle-o-left', {'command' : 'cycle_ext_door'}, data.processing ? 'disabled' : null)}}
		{{/if}}
		{{if data.interior_status.state == "open"}}
			{{:helper.link('Заблокировать внутренний шлюз', 'exclamation-triangle', {'command' : 'force_int'}, data.processing ? 'disabled' : null)}}
		{{else}}
			{{:helper.link('Цикл возвращения', 'arrow-circle-right', {'command' : 'cycle_int_door'}, data.processing ? 'disabled' : null)}}
		{{/if}}
		</div>
	</div>
</div>
