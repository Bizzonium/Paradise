<!--
Title: Shuttle Manipulator UI
-->

<h3>Операции</h3>
<div class="item">
	{{:helper.link('Статус', 'link', {'selectMenuKey' : 'stat'}, data.selectedMenuKey == 'stat' ? 'selected' : null)}}
	{{:helper.link('Шаблоны', 'link', {'selectMenuKey' : 'stemp'}, data.selectedMenuKey == 'stemp' ? 'selected' : null)}}
	{{:helper.link('Модификация', 'link', {'selectMenuKey' : 'mod'}, data.selectedMenuKey == 'mod' ? 'selected' : null)}}
</div>

<div class="item">&nbsp;</div>

<!-- Shuttle Status Tab -->
{{if !data.selectedMenuKey || data.selectedMenuKey == 'stat'}}
	{{for data.shuttles}}
		<div class='statusDisplay'>
			<div class='itemLabel'>
			Имя: {{:value.name}}
			</div>
			<div class='itemContentWide'>
			ID: {{:value.id}}
			</div>
			<div class='itemContentWide'>
			Таймер шаттла: {{:value.timeleft}}
			</div>
			<div class='itemContentWide'>
			Режим шаттла: {{:value.mode}}
			</div>
			<div class='itemContentWide'>
			Статус шаттла: {{:value.status}}
			</div>
			<div class='itemContentWide'>
			{{:helper.link('Прыжок на', 'space-shuttle', {'jump_to' : 1, 'type' : 'mobile', 'id' : value.id}, null)}}
			{{:helper.link('Быстрое путешествие', 'rocket', {'fast_travel' : 1, 'id' : value.id}, null)}}
			</div>
		</div>
	{{/for}}
<!-- Shuttle template tab -->
{{else data.selectedMenuKey == 'stemp'}}
	<div class="item">
	{{for data.templates_tabs}}
		{{:helper.link(value, 'space-shuttle', {'select_template_category' : value}, (data.existing_shuttle.id == value) ? 'selected' : null)}}
	{{/for}}
	</div>
	{{if data.existing_shuttle}}
		<div class="item">&nbsp;</div>
		{{for data.templates[data.existing_shuttle.id].templates}}
			<div class='statusDisplay'>
				<div class='itemLabelWide'>
					Название: {{:value.name}}
				</div>
				{{if value.description}}
					<div class='itemContent'>
						Описание: {{:value.description}}
					</div>
				{{/if}}
				{{if value.admin_notes}}
					<div class='itemContent'>
						Заметки админа: {{:value.admin_notes}}
					</div>
				{{/if}}

				<div class='item'>
					{{:helper.link('Выбрать шаблон', 'space-shuttle', {'select_template' : 1, 'shuttle_id' : value.shuttle_id}, (data.selected && data.selected.shuttle_id == value.shuttle_id) ? 'selected' : null)}}
				</div>
			</div>
		{{/for}}
	{{/if}}

<!-- Shuttle Modification tab -->
{{else data.selectedMenuKey == 'mod'}}
	<div class="statusDisplay">
		{{if data.existing_shuttle}}
			<div class='itemGroup'>
				<div class='itemLabelWide'>
					Существующий шаттл: {{:data.existing_shuttle.name}}
				</div>
				<div class='item'>
					Статус: {{:data.existing_shuttle.status}}
				</div>
				{{if data.existing_shuttle.timer}}
					<div class='item'>
						({{:data.existing_shuttle.timeleft}})
					</div>
				{{/if}}
				<div class='item'>
					{{:helper.link('Прыжок на', 'space-shuttle', {'jump_to' : 1, 'type' : 'mobile', 'id' : data.existing_shuttle.id}, null)}}
				</div>
			</div>
		{{else}}
			<h3>Шаттл не выбран</h3>
		{{/if}}


		{{if data.selected}}
			<div class='itemGroup'>
				<div class='itemLabelWide'>
					Название: {{:data.selected.name}}
				</div>
				{{if data.selected.description}}
					<div class='itemContent'>
						Описание: {{:data.selected.description}}
					</div>
				{{/if}}
				{{if data.selected.admin_notes}}
					<div class='itemContent'>
						Заметки админа: {{:data.selected.admin_notes}}
					</div>
				{{/if}}

				<div class='item'>
					{{:helper.link('Предпросмотр', 'exclamation-circle', {'preview' : 1, 'shuttle_id' : data.selected.shuttle_id}, null)}}
					{{:helper.link('Загрузка', 'exclamation-circle', {'load' : 1, 'shuttle_id' : data.selected.shuttle_id}, null)}}
				</div>
			</div>
		{{else}}
			<h3>Шаблон не выбран</h3>
		{{/if}}
	</div>
{{/if}}
