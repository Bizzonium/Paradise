<div class="item">
	<div class="itemLabel">
		Приёмник:
	</div>
	<div class="itemContent">
		{{if data.receiver_off}}
			{{:helper.link("Вкл",  '', {"stopic":"messenger", "toggler":1})}}
			{{:helper.link("Выкл", '', {"stopic":"messenger", "toggler":2}, 'selected')}}
		{{else}}
			{{:helper.link("Вкл",  '', {"stopic":"messenger", "toggler":1}, 'selected')}}
			{{:helper.link("Выкл", '', {"stopic":"messenger", "toggler":2})}}
		{{/if}}
	</div>
</div>

<div class="item">
	<div class="itemLabel">
		Звуки:
	</div>
	<div class="itemContent">
		{{if data.ringer_off}}
			{{:helper.link("Вкл",  '', {"stopic":"messenger", "ringer":1})}}
			{{:helper.link("Выкл", '', {"stopic":"messenger", "ringer":2}, 'selected')}}
		{{else}}
			{{:helper.link("Вкл",  '', {"stopic":"messenger", "ringer":1}, 'selected')}}
			{{:helper.link("Выкл", '', {"stopic":"messenger", "ringer":2})}}
		{{/if}}
	</div>
</div>

{{for data.pdas}}
	<div class="item">
		{{:helper.link(value.name, '', {"stopic":"messenger", "select":value.owner})}}
		{{:helper.link("Быстрое сообщение", '', {"stopic":"messenger", "target":value.ref})}}
	</div>
{{/for}}
<hr/>
{{if data.current_ref}}
	<div class="item">
		<div class="itemLabel">
			Выбранный PDA:
		</div>
		<div class="itemContent">
			<div style="float: left; width: 80px; text-align: center;">{{:data.current_name}}</div>
			{{:helper.link("Отправить сообщение", '', {"stopic":"messenger", "target":data.current_ref})}}
		</div>
	</div>
{{else data.current_name}}
	<div class="item">
		<div class="itemLabel">
			Выбранный PDA:
		</div>
		<div class="itemContent">
			{{:data.current_name}} (Невозможно отправить!)
		</div>
	</div>
{{/if}}

{{for data.messages}}
<div class="item">
	<div class="itemLabel">
		{{if value.sent}}
			Получатель {{:value.target}}:
		{{else}}
			Отправитель {{:value.target}}:
		{{/if}}
	</div>
	<div class="itemContent">
		{{:value.message}}
	</div>
</div>
{{/for}}

{{if data.current_name}}
	{{:helper.link("Очистить экран", '', {"stopic":"messenger", "select":"*NONE*"})}}
{{/if}}
