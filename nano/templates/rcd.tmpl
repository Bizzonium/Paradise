{{if data.menu == 1}}
	<h3>Режимы УБС:</h3>
	<div class='item'>{{:helper.link('Полы и стены', 'arrow-right', {'mode': "Turf"}, data.mode == "Turf" ? 'linkOn' : null)}}</div>
	<div class='item'>
		{{:helper.link('Шлюзы', 'arrow-right', {'mode': "Airlock"}, data.mode == "Airlock" ? 'linkOn' : null)}}
		{{:helper.link('', 'gear', {'menu': 2})}}
	</div>
	<div class='item'>{{:helper.link('Деконструкция', 'arrow-right', {'mode': "Deconstruct"}, data.mode == "Deconstruct" ? 'linkOn' : null)}}</div>
	<div class='item'>{{:helper.link('Окна', 'arrow-right', {'mode': "Windows"}, data.mode == "Windows" ? 'linkOn' : null)}}</div>
	<div class='statusDisplay'>
		<div class='item'>Патроны УБС: {{:data.matter}} / {{:data.max_matter}}</div>
	</div>
{{else data.menu == 2}}
	<div class='item'>{{:helper.link('Назад', 'reply', {'menu': 1})}}</div>
	<div class='item'>
 		<div class='statusDisplay'>
 			<div class='item'>
 				<div style="float:right;">
 					{{if !data.locked}}{{:helper.link("Переименовать", '', {'choice' : 'airlock_name'})}}{{else}}LOCKED{{/if}}
 				</div>
 				<div class='itemLabel'>
 					Название шлюза:
 				</div>
 				<div class='itemContent'>
 					{{:data.door_name}}
 				</div>
 			</div>
 		</div>
 	</div>
	<div style='width:49%; float:left'><div class='statusDisplay'>
		<h3>Тип</h3>
		{{for data.allowed_door_types}}
			<div class='line'>{{:helper.link(value.name, 'arrow-right', {'door_type': value.type}, data.door_type == value.type ? 'linkOn' : null)}}</div>
		{{/for}}
	</div></div>
	<div style='width:49%; float:right'><div class='statusDisplay'>
		<h3>Доступы</h3>
		{{if data.locked}}
			{{:helper.link('Проведите ID', 'unlock-alt', {'login': 1})}}
		{{else}}
			{{:helper.link('Заблокировать', 'lock', {'logout': 1})}}
			<div class='item'>{{:helper.link(data.one_access ? 'ОДИН' : 'ВСЁ', 'arrow-right', {'toggle_one_access': 1})}}</div><br>
			{{for data.door_accesses}}
				<div class='line'>{{:helper.link(value.name, 'arrow-right', {'toggle_access': value.id}, null, value.enabled ? 'selected' : null)}}</div>
			{{/for}}
		{{/if}}
	</div></div>
{{/if}}
