<!--
Title: Solar Control Computer
Used In File(s): \code\modules\power\solar.dm
-->

<h1>Статус</h1>
<div class='statusDisplay'>
	<div class="line">
		<div class='statusLabel' style='font-weight:bold;'>
			Генерируемая энергия:
		</div>
		<div class='statusValue'>
			{{:helper.smoothRound(data.generated)}} Вт
		</div>
	</div>

	<div class='line'>
		<div class='statusLabel' style='font-weight:bold;'>
			Ориентация:
		</div>

		<div class='statusValue'>
		{{:helper.smoothRound(data.angle)}}&deg ({{:data.direction}})&nbsp;
		</div>

		{{:helper.link('15&deg', 'minus', {'rate_control' : '1', 'cdir' : '-15'})}}
		{{:helper.link('1&deg', 'minus', {'rate_control' : '1', 'cdir' : '-1'})}}
		{{:helper.link('1&deg', 'plus', {'rate_control' : '1', 'cdir' : '1'})}}
		{{:helper.link('15&deg', 'plus', {'rate_control' : '1', 'cdir' : '15'})}}
	</div>
</div>

<h1>Трекинг солнца</h1>
<div class='statusDisplay'>
	<div class="line">
		<div class='statusLabel' style='font-weight:bold;'>
			Статус трекера:
		</div>

		{{:helper.link('Выкл', 'close', {'track' : '0'}, (data.tracking_state == 0) ? 'selected' : '')}}
		{{:helper.link('По времени', 'clock-o', {'track' : '1'}, (data.tracking_state == 1) ? 'selected' : '')}}
		{{if data.connected_tracker}}
			{{:helper.link('Авто', 'signal', {'track' : '2'}, (data.tracking_state == 2) ? 'selected' : '')}}
		{{else}}
			{{:helper.link('Авто', 'signal', null, 'disabled')}}
		{{/if}}
	</div>

	<div class="line">
		<div class='statusLabel' style='font-weight:bold;'>
			Скорость трекинга:
		</div>

		<div class='statusValue'>
			 {{:helper.smoothRound(data.tracking_rate)}} град/ч ({{:data.rotating_way}})
		</div>
	</div>

	<div class='line'>
		{{:helper.link('180&deg', 'minus', {'rate_control' : '1', 'tdir' : '-180'})}}
		{{:helper.link('30&deg', 'minus', {'rate_control' : '1', 'tdir' : '-30'})}}
		{{:helper.link('1&deg', 'minus', {'rate_control' : '1', 'tdir' : '-1'})}}
		{{:helper.link('1&deg', 'plus', {'rate_control' : '1', 'tdir' : '1'})}}
		{{:helper.link('30&deg', 'plus', {'rate_control' : '1', 'tdir' : '30'})}}
		{{:helper.link('180&deg', 'plus', {'rate_control' : '1', 'tdir' : '180'})}}
	</div>
</div>

<h1>Подключенные устройства</h1>
<div class='statusDisplay'>
	<div class="line">
		<div class='statusLabel' style='font-weight:bold;'>
			Солнечные панели:
		</div>
		<div class='statusValue'>
			{{:data.connected_panels}} подключено
		</div>
	</div>

	<div class='line'>
		<div class='statusLabel' style='font-weight:bold;'>
			Трекер солнца:
		</div>

		<div class='statusValue'>
			{{if data.connected_tracker}}
				<span class='good'>Найден</span>
			{{else}}
				<span class='bad'>Не найден</span>
			{{/if}}
		</div>
	</div>
</div>
<div class='line'>
	{{:helper.link('Искать устройства', 'refresh', {'search_connected' : '1'})}}
</div>
