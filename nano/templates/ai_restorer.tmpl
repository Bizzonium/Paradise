{{if data.restoring}}
	<div class="notice">Восстановление в процессе!</div>
{{/if}}

<div class='item'>
	<div class='itemLabel'>Вставленный ИИ:</div>
	<div class='itemContent'>{{:helper.link(data.name ? data.name : "-----", 'eject', {'action' : 'PRG_eject'}, data.nocard ? 'disabled' : null)}}</div>
</div>

{{if data.error}}
	<b>ОШИБКА: {{:data.error}}</b>
{{else}}
	<h2>Статус системы</h2>
	<div class="item">
		<div class="item">
			<div class="itemLabel">Текущий ИИ:</div>
			<div class="itemContent">{{:data.name}}</div>
		</div>
		<div class="item">
			<div class="itemLabel">Статус:</div>
			<div class="itemContent">{{if data.isDead}}Нефункционален{{else}}Функционален{{/if}}</div>
		</div>
		<div class="item">
			<div class="itemLabel">Целостность системы:</div>
			{{:helper.displayBar(data.health, 0, 100, (data.health > 75) ? 'good' : (data.health > 50) ? 'average' : 'bad')}}
			<div class="itemContent" style="width: 60px">
				{{:helper.smoothRound(data.health)}}%
			</div>
		</div>
		<div class="item">
			<div class="itemLabel">
				Действующие законы:
			</div>
			<div class="itemContent">
				<table>
					{{for data.ai_laws}}
						<tr><td>{{:value.index}}: {{:value.text}}
					{{/for}}
				</table>
			</div>
		</div>
	</div>
	<h2>Операции</h2>
	{{:helper.link('Начать восстановление', 'plus', {'action' : 'PRG_beginReconstruction'}, data.restoring ? 'disabled' : null)}}
{{/if}}
