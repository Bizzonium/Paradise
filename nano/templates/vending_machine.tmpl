<!--
	Interface for vending machines
	See: code/game/machinery/vending.dm
-->

{{if data.mode == 0}} <!-- Listing -->
<h2>Доступные предметы</h2>
<div class='item'>
	{{for data.products}}
	<div class='item'>
			<div style='float'>
				{{if value.price > 0}}
					{{:helper.link('Купить (' + value.price + ')', 'shopping-cart', { "vend" : value.key }, value.amount > 0 ? null : 'disabled')}}
				{{else}}
					{{:helper.link('Выдать', 'arrow-circle-down', { "vend" : value.key }, value.amount > 0 ? null : 'disabled')}}
				{{/if}}
			</div>
		<div class='itemContent'>
		{{if value.color}}<span style='color:{{:value.color}}'>{{:value.name}}</span>
		{{else}}{{:value.name}}
		{{/if}}
			 ({{:value.amount ? value.amount : "НЕ ОСТАЛОСЬ"}})
		</div>
	</div>
	{{empty}}
	Нет доступных предметов!
	{{/for}}
</div>
{{if data.coin}}
<h2>Монета</h2>
<div class='item'>
	<div class='itemLabel'>Опущенная моента:</div>
	<div class='itemContent'>{{:helper.link(data.coin, 'eject', {'remove_coin' : 1})}}</div>
</div>
{{/if}}
{{if data.item_slot == 1}}
<h2>Слот предмета</h2>
<div class='item'>
	<div class='itemLabel'>Слот предмета:</div>
	{{if data.inserted_item}}
		<div class='itemContent'>{{:helper.link(data.inserted_item, 'eject', {'remove_item' : 1})}}</div>
	{{else}}
		<div class='itemContent'>Пусто</div>
	{{/if}}
</div>
{{/if}}
{{else data.mode == 1}} <!-- Payment screen -->
<h2>Выбран предмет</h2>
<div class='item'>
	<div class='item'>
		<div class='itemLabel'>Выбран предмет:</div> <div class='itemContent'>{{:data.product}}</div>
		<div class='itemLabel'>Стоимость:</div> <div class='itemContent'>{{:data.price}}</div>
	</div>
	<div class='statusDisplay' style='overflow: auto;'>
		{{if data.message_err}} <span class='uiIcon16 icon-alert' ></span>{{/if}} {{:data.message}}
	</div>
	<div class='item'>
		{{:helper.link('Купить', 'shopping-cart', {'pay' : 1})}}
		{{:helper.link('Отмена', 'arrow-left', {'cancelpurchase' : 1})}}
	</div>
</div>
{{/if}}
{{if data.panel}}
<h2>Панель обслуживания</h2>
<div class='item'>
	<div class='itemLabel'>Громкоговоритель</div><div class='item'>{{:helper.link(data.speaker ? 'Включен' : 'Отключен',  'gear', {'togglevoice' : 1})}}</div>
</div>
{{/if}}
